# Aliased Providers (for doing things in every region).
{{ $out := .}}
{{ range $region := .AWSRegions }}
  provider "aws" {
    alias = "{{ $region }}"
    version = "~> {{ $out.AWSProviderVersion }}"
    region = "{{ $region }}"
    profile = "{{ $out.AWSProfileProvider }}"
    {{ if $out.AccountID }}allowed_account_ids = [{{ $out.AccountID }}]{{ end }}
