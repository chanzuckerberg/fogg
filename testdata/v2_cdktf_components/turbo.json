{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
        "inputs": ["src/**/*", ".fogg-component.yaml"],
        "outputs": ["dist/**"],
        "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": [],
      "inputs": ["**/*.test.ts", "**/*.test.tsx", "vitest.config.mts"]
    },
    "synth": {
      "inputs": ["./src/**/*", "./.fogg-component.yaml"],
      "outputs": ["cdk.tf.json", "ci-cdk.tf.json", "assets/**"],
      "dependsOn": ["^build"]
    },
    "type-check": {},
    "clean": {
      "cache": false
    }
  }
}
